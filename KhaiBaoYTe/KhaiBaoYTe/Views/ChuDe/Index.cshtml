@model IEnumerable<KhaiBaoYTe.ViewModel.ChuDeVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="label_page">Chủ đề</h2>

<div class="d-flex flex-row">
    <div class="mr-auto">
        Tổng số chủ đề : @Model.Count()
    </div>
    <div class="ml-auto">
        <a href="@Url.Action("Create", "ChuDe")" class="btn btn-info btn-sm" data-toggle="tooltip" data-placement="top" title="Create new">
            <i class="fas fa-plus"></i>
        </a>
    </div>
</div>
  
<table class="table table-hover data_table shadow_card_user" style="background-color: #eaeaea; ">
    <thead class="thead-light">
        <tr>
            <th>
                Tên chủ đề
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Người tạo
            </th>
            <th>
                Ngày cập nhật
            </th>
            <th>
                Người cập nhật
            </th>
            <th>
                Số câu hỏi
            </th>
            <th>
                Số câu trả lời
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.TenChuDe 

                    </td>
                    <td>
                        @item.MoTa
                    </td>
                    <td>
                        @item.NgayTao.Value.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @item.NguoiTao
                    </td>
                    <td>
                        @item.NgayUpdate.Value.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @item.NguoiUpdate
                    </td>
                    <td>
                        @item.SoLgCauHoi
                    </td>
                    <td>
                        @item.SoLgTraLoi
                    </td>
                    <td>
                        <div class="container">
                            <div class="row flex-nowrap justify-content-center">
                                <div class="col-sm d-flex justify-content-center">
                                    <a href="@Url.Action("Edit", "ChuDe", new { id = item.IDChuDe})" class="btn btn-success btn-sm icon_link" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                                <div class="col-sm d-flex justify-content-center">
                                    <a href="@Url.Action("Details", "ChuDe", new { id = item.IDChuDe})" class="btn btn-info btn-sm icon_link" data-toggle="tooltip" data-placement="top" title="Details">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                </div>
                                <div class="col-sm d-flex justify-content-center">
                                    <a href="@Url.Action("Delete", "ChuDe", new { id = item.IDChuDe})" class="btn btn-danger btn-sm icon_link" data-toggle="tooltip" data-placement="top" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>

                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>

</table>

