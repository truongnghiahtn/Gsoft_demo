@model KhaiBaoYTe.Models.ChuDe

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h2>Delete</h2>
    <h4>ChuDe</h4>
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
</div>
<hr />
<div>
    <div class="row justify-content-md-around">
        <div class="col-md-7">
            <dl class="row">
                <dt class="col-6">
                    Tên chủ đề
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.TenChuDe)
                </dd>
                <dt class="col-6">
                    Mô tả
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.MoTa)
                </dd>
                <dt class="col-6">
                    Ngày tạo
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.NgayTao)
                </dd>
                <dt class="col-6">
                    Người tạo
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.NguoiTao)
                </dd>
                <dt class="col-6">
                    Ngày update
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.NgayUpdate)
                </dd>
                <dt class="col-6">
                    Người update
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.NguoiUpdate)
                </dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center mt-md-4">
            <input type="submit" value="Delete" class="btn btn-outline-danger" /> 
            <a href="@Url.Action("Index", "ChuDe")" class="btn btn-default">
                Back to Chủ đề
            </a>
        </div>
    }
</div>
