@model KhaiBaoYTe.Models.CauTraLoi_ChiTiet

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h2>Delete</h2>
    <h4>Câu trả lời</h4>
    <h5 class="text-danger">Are you sure you want to delete this?</h5>
</div>
<hr />
<div>
    <div class="row justify-content-md-around">
        <div class="col-md-4">
            <dl class="row">
                <dt class="col-6">
                    User
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.CauTraLoi1.HoTen)
                </dd>
                <dt class="col-6">
                    Tiêu đề
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.CauHoi.TieuDe)
                </dd>
                <dt class="col-6">
                    Câu trả lời
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.CauTraLoi)
                </dd>
            </dl>
        </div>
    </div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center mt-md-4">
            <input type="submit" value="Delete" class="btn btn-outline-danger" /> 
            <a href="@Url.Action("Index", "CauTraLoiChiTiet", new { stringId = Request.QueryString["stringId"] })" class="btn btn-default">
                Back to Câu trả lời
            </a>
        </div>
    }
</div>
